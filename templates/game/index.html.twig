{% extends 'base.html.twig' %}

{% block title %}Home Page{% endblock %}

{% block body %}
    <style>
        .playground{
            border-radius: 10px;
            box-shadow: 0 10px 16px rgba(0, 0, 0, 0.25);
            margin-bottom: 40px;
            margin-top: 40px;
            padding: 40px;

        }
    </style>

    <section class="playground">
        <article>
            <h1>Rock Paper Scissors</h1>
            <form method="post" action="{{ path('playing_game') }}">
                <label for="move">Choose: [r]ock, [p]aper, [s]cissors:</label>
                <input type="text" id="move" name="move">
                <button type="submit">Submit</button>
            </form>
        </article>
    </section>
{% endblock %}
